<% provide(:title, 'Sign up') %>

<div class= "row">
  <div class = "span5">
    <%= simple_form_for(@user, html: {class: "well"}) do |f| %>
      <fieldset>
        <legend>Sign Up</legend>
        <%= f.input :name %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <%= f.button :submit, "Create my account" %>
     </fieldset>
    <% end %>
  </div>
  <div class = "span7">
    <h2>Signing up is easy and secure!</h2>
  </div>
</div>
